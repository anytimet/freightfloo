# ===========================================
# FreightFloo DEVELOPMENT Environment Configuration
# ===========================================
# This is the DEVELOPMENT environment template
# Copy this to .env.local for local development

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================

# Environment MUST be development
NODE_ENV=development

# NextAuth.js Configuration - Local development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-development-secret-key-here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Development Database (SQLite) - REQUIRED for local dev
DATABASE_URL="file:./dev.db"

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================

# Resend API Key for email notifications
RESEND_API_KEY=re_your_resend_api_key_here

# ===========================================
# STRIPE PAYMENT SYSTEM - TEST KEYS
# ===========================================

# Stripe Secret Key (Server-side) - TEST KEY
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Publishable Key (Client-side) - TEST KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Stripe Webhook Secret - TEST WEBHOOK
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here

# ===========================================
# GOOGLE SERVICES
# ===========================================

# Google Maps API Key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# ===========================================
# DEVELOPMENT NOTES
# ===========================================
# 1. Always use test keys in development
# 2. Use localhost URLs
# 3. SQLite database for local development
# 4. Test webhook endpoints
